    <http:listener-config name="HTTP_Listener_Configuration" host="0.0.0.0" port="9091" doc:name="HTTP Listener Configuration"/>
    <flow name="processingFlow">
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
        </dw:transform-message>
        <file:outbound-endpoint path="D:\jsonresult" outputPattern="#[message.inboundProperties.originalFileName].json" responseTimeout="10000" doc:name="File OBEP"/>
    </flow>
    <flow name="readingFlow">
        <file:inbound-endpoint path="D:\input" moveToPattern="#[server.nanoTime()]_#[message.inboundProperties.originalFileName]" moveToDirectory="D:\backup" responseTimeout="10000" doc:name="File IBEP">
            <file:filename-regex-filter pattern=".*csv,.*json" caseSensitive="true"/>
        </file:inbound-endpoint>
        <dw:transform-message doc:name="Transform Message">
            <dw:set-payload><![CDATA[%dw 1.0
%output application/java
---
payload]]></dw:set-payload>
        </dw:transform-message>
        <collection-splitter doc:name="Collection Splitter"/>
    </flow>
